<!DOCTYPE html>
<html>
<!-- Include Head -->
<%- include('../includes/head', { title: 'Editar Produto', imports: '<link rel="stylesheet" href="/css/admin.css">' }) %>

  <body>
    <!-- Header -->
    <%- include('../includes/header') %>
    <!-- /Header -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Você está editando: <i><%= productToEdit.nome %> - <%= productToEdit.id %></i></h2>
        </div>
      </div>
        <div class="col-12">
          <form action="/product/<%= productToEdit.id %>?_method=PUT" method="post" enctype="application/x-www-form-urlencoded">
            <div class="row product-detail">
							<div class="col-12 col-md-6">
								<label for="sku" class="form-label">Sku:</label>
								<input type="text" id="sku" name="sku" placeholder="Informe o sku do produto" class="form-input" value="<%= productToEdit.sku %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="name" class="form-label">Marca:</label>
								<input type="text" id="marca" name="marca" placeholder="Informe a marca do produto" class="form-input" value="<%= productToEdit.marca %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="nome" class="form-label">Nome:</label>
								<input type="text" id="nome" name="nome" placeholder="Informe o nome do produto" class="form-input" value="<%= productToEdit.nome %>">
							</div>
							<div class="col-12">
								<label for="tamanhos" class="form-label">Tamanhos:</label>
								<input name="tamanhos" id="tamanhos" class="form-input" value="<%= productToEdit.tamanhos %>"></input>
							</div>
							<div class="col-12 col-md-6">
								<label for="imagemDestaque" class="form-label">Imagem destaque:</label>
								<input type="text" id="imagemDestaque" name="imagemDestaque" placeholder="Informe o nome do produto" class="form-input" value="<%= productToEdit.imagemDestaque %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="imagens" class="form-label">Imagens:</label>
								<input type="text" id="imagens" name="imagens" placeholder="Informe o nome do produto" class="form-input" value="<%= productToEdit.imagens %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="categoria" class="form-label">Categoria:</label>
								
								<select name="categoria" id="categoria">
									<option value="1" <%= productToEdit.categoria == "Para Eles" ? 'selected' : '' %>>Para Eles</option>
									<option value="2" <%- productToEdit.categoria == "Para Elas" ? 'selected' : '' %>>Para Elas</option>
									<option value="3" <%- productToEdit.categoria == "Esportes" ? 'selected' : '' %>>Esportes</option>
									<option value="5" <%- productToEdit.categoria == "Lançamentos" ? 'selected' : '' %>>Lançamentos</option>
								</select>
								
							</div>
							<div class="col-12 col-md-6">
								<label for="cores" class="form-label">Cores:</label>
								<input type="text" id="cores" name="cores" placeholder="Informe as cores do produto" class="form-input" value="<%= productToEdit.cores %>">
							</div>			
							<div class="col-12 col-md-6">
								<label for="valor" class="form-label">Valor:</label>
								<input type="text" id="valor" name="valor" placeholder="Informe o preço do produto" class="form-input" value="<%= productToEdit.valor %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="desconto" class="form-label">Valor com Desconto:</label>
								<input type="text" id="desconto" name="desconto" placeholder="Informe o desconto do produto" class="form-input" value="<%= productToEdit.desconto %>">
							</div>
							<div class="col-12">
								<label for="destaque" class="form-label">Destaque:</label>
								<select name="destaque" id="destaque">
									<option value="true" <%= productToEdit.destaque == "true" ? 'selected' : '' %>>Sim</option>
									<option value="false" <%- productToEdit.destaque == "false" ? 'selected' : '' %>>Não</option>
								</select>
							</div>
							<div class="col-12">
								<label for="oferta" class="form-label">Oferta:</label>
								<select name="oferta" id="oferta">
									<option value="true" <%= productToEdit.oferta == "true" ? 'selected' : '' %>>Sim</option>
									<option value="false" <%- productToEdit.oferta == "false" ? 'selected' : '' %>>Não</option>
								</select>
								<!-- <input name="oferta" id="oferta" class="form-input" value="<%= productToEdit.oferta %>"></input> -->
							</div>
							<div class="col-12">
								<label for="descricao" class="form-label">Descrição:</label>
								<textarea name="descricao" id="descricao" class="form-input"><%= productToEdit.descricao %></textarea>
							</div>
							
							
							<div class="col-12">
								<button type="submit" class="buy-now-button">Salvar</button>
							</div>
						</div>
          </form>
        </div>
      </div>
      <!-- /todos los productos -->

      <!-- footer -->
      <%- include('../includes/footer') %>
      <!-- /footer -->
  </body>

</html>