<!DOCTYPE html>
<html>
<!-- Include Head -->
<%- include('includes/head', {title: 'Resultados da sua pesquisa' }) %>

  <body>
    <!-- Header -->
    <%- include('includes/header') %>
    <!-- /Header -->

      <!-- Banner -->
      <div class="banner"></div>
      <!-- /Banner -->

      <!-- todos os produtos -->
      <div class="container products-wrapper">
        <div class="row">
          <div class="col-12">
            <h2 class="products-title">Resultados da pesquisa: <%= search %></h2>
          </div>
          <% if (products.length> 0) {
            products.forEach((product) => {
            let finalPrice = (product.valor * ((100 - product.desconto) / 100)).toFixed(0)
          %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/product/detail/<%= `${product.sku}/` %>">
                <figure class="product-box_image">
                  <img src="../images/produtos/<%= product.imagemDestaque %>" alt="imagem do produto">
                </figure>
                <article class="product-box_data">
                  <h2>$<%= toThousand(finalPrice) %>
                  </h2>
                  <span>
                    <%= product.desconto %>% OFF
                  </span>
                  <p>
                    <%= product.nome %>
                  </p>
                  <i class="fas fa-truck"></i>
                </article>
              </a>
            </section>
          </div>
          <% })} else { %>
            <div class="col-12">
              <h2 class="products-title" style="color: tomato;">Não há produtos correspondentes a essa pesquisa</h2>
            </div>
          <% } %>
        </div>
      </div>
      <!-- /todos os produtos -->

      <!-- footer -->
      <%- include('includes/footer') %>
      <!-- /footer -->
  </body>

</html>