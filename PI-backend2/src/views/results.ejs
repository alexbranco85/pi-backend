<!DOCTYPE html>
<html>
<!-- Include Head -->
<%- include('includes/head', {title: 'Resultados da sua pesquisa', imports: '<link rel="stylesheet" href="/css/results.css">' }) %>

  <body>
    <!-- Header -->
    <%- include('includes/header') %>
      <!-- /Header -->

      <!-- Banner -->
      <div class="banner"></div>
      <!-- /Banner -->

      <!-- todos os produtos -->
      <div class="container products-wrapper">
        <div class="row">
          <div class="col-12">
            <h2 class="products-title">Resultados da pesquisa: <%= search %>
            </h2>
          </div>



          <ul class="lista-categorias lc2" id="ofertas-hom  e">

            <% if (products.length> 0) {
              products.forEach((product) => {
              let finalPrice = (product.valor - product.desconto).toFixed(0)
              %>

              <li class="lista-produtos">
                <a href="produto/<%= product.sku %>"><img src="../images/produtos/<%= product.imagemDestaque %>"></a>
                <div class="produtos-cores">
                  <ul>
                    <li><img src="../images/cores/cor1.png" /></li>
                    <li><img src="../images/cores/cor2.png" /></li>
                  </ul>
                </div>
                <h4>
                  <%= product.nome %>
                </h4>
                <div class="imgem-valores">
                  <span class="valor-real">de R$ <%= product.valor %></span>
                  <span class="promocao">por R$ <%= product.desconto %></span>
                </div>
                <button class="botao-eu-quero">EU QUERO</button>
              </li>

              <% }); %>

          </ul>


          <% } else { %>
            <div class="col-12">
              <h2 class="products-title" style="color: tomato;">Não há produtos correspondentes a essa pesquisa</h2>
            </div>
            <% } %>
        </div>
      </div>

      <!-- footer -->
      <%- include('includes/footer') %>
        <!-- /footer -->
  </body>

</html>